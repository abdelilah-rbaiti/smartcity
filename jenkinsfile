pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        checkout scm
        sh 'echo "Checkout passed successfully"'
      }
    }
 stage('Detect Secrets with GitLeaks') {
            steps {
                script {
                     // Initialize Go module
                    sh 'go mod init'

                    // Run GitLeaks
                    sh 'go build -o /usr/local/bin/gitleaks ./gitleaks && gitleaks'
                }
            }
        }
  }
}
