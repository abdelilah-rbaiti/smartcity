pipeline {
  agent any
  stages { 
    stage('Checkout') {
      steps {
        checkout scm
        sh 'echo "Checkout passed successfully"'
      }
    }
    stage('Decrypt Sensitive Files') {
            steps {
                script {
                    // Initialize BlackBox
                    sh 'blackbox_initialize'

                    // Decrypt sensitive files
                    sh 'blackbox_decrypt_all_files'
                }
            }
        }
        
  }
}

