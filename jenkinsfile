pipeline {
  agent any
  stages { 
    stage('Checkout') {
      steps {
        checkout scm
        sh 'echo "Checkout passed successfully"'
      }
    }
    stage('Scan for Secrets') {
            steps {
                script {
                    // Assuming GitSecrets is in your system PATH
                    sh 'git secrets --scan -r'
                }
            }
        }
                
            
        
  }
}

