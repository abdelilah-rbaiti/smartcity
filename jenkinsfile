pipeline {
  agent any
  stages { 
    stage('Checkout') {
      steps {
        checkout scm
        sh 'echo "Checkout passed successfully"'
      }
    }
    stage('Detect Secrets') {
            steps {
                script {
                    // Run detect-secrets
                    sh 'detect-secrets scan --all-files'
                }
            }
        }
        
  }
}

